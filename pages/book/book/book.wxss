/* pages/book/book/book.wxss */
#book-list-container {
  box-shadow: 0rpx 0rpx 4rpx silver;
  width: 90%;
  margin: auto;
  margin-top: 2%;
  border-radius: 10rpx;
  padding: 0rpx 10rpx 15rpx 10rpx;
}

.book-list-book {
  border-bottom: 1rpx solid rgba(192, 192, 192, 0.541);
  font-size: 25rpx;
  padding: 30rpx 10rpx 30rpx 10rpx;
}

.arrow {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  position: absolute;
  right:60rpx;
  margin-top: 4rpx;
  transform: rotate(45deg);
}

.book-list-title{
  text-align: center;
  font-size: 30rpx;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background: white;
  width: 100%;
  z-index: 10;
}