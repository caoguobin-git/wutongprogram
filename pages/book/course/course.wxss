/* pages/book/course.wxss */

#course-page-container {
  box-shadow: 0rpx 0rpx 2rpx silver;
  width: 90%;
  margin: auto;
  margin-top: 5%;
  border-radius: 10rpx;
  padding: 0rpx 10rpx 15rpx 10rpx;
}

.course-item {
  border-bottom: 1rpx solid rgba(192, 192, 192, 0.541);
  font-size: 25rpx;
  padding: 30rpx 10rpx 30rpx 10rpx;
}

.arrow {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  position: absolute;
  right:60rpx;
  margin-top: 4rpx;
  transform: rotate(45deg);
}
